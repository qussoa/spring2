<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.biz.sec.persistence.UserDao">

	

	<select id="create_table">
		${create_table}
	</select>

	<resultMap type="userDetailsVO" id="userAndAuthorities">
		<id column="id" property="id" />
		<result property="username" column="username" />
		
		<collection 
		property="authorities" 
		column="username"
		ofType="authorityVO" 
		select="findByUserNameAuthorities" />
	</resultMap>
	<select id="findById" resultMap="userAndAuthorities">
		SELECT
		user_name AS username,
		user_password AS password,
		enabled, email, phone, address
		FROM TBL_USERS WHERE id = #{id}
	</select>

	<select id="findByUserNameAuthorities" resultType="authorityVO">
		SELECT * FROM authorities WHERE username = #{username}
	</select>

	<insert id="insert">
		INSERT INTO `tbl_users`
		(
		`user_name`,
		`user_password`,
		`enabled`
		)VALUES(

		#{username},
		#{password},
		true
		)

	</insert>


</mapper> 